{
  "name": "modern-stack-skeleton-graphql",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "now-build": "tsc || true",
    "install:workspace": "cd ../../ && yarn install && cd packages/graphql",
    "build": "tsc --outDir dist || true",
    "start": "node dist/index.js",
    "dev:strict": "STRICT_TYPING=true npx ts-node-dev --n src/index.ts",
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "test:watch": "jest --config jest.config.js --watch",
    "start:mock": "npx json-server --watch src/data/db.json --port 5555"
  },
  "resolutions": {
    "graphql": "14.2.1"
  },
  "dependencies": {
    "redis": "2.8.0",
    "firebase-admin": "7.3.0",
    "mkdirp": "0.5.1",
    "reflect-metadata": "0.1.13",
    "apollo-datasource-rest": "0.3.2",
    "apollo-datasource": "0.3.1",
    "apollo-errors": "1.9.0",
    "apollo-resolvers": "1.4.1",
    "apollo-server": "2.4.8",
    "apollo-server-caching": "0.3.1",
    "apollo-server-cache-redis": "0.3.1",
    "apollo-server-express": "2.4.8",
    "graphql-tools": "4.0.4",
    "graphql-extensions": "0.5.7",
    "@graphql-modules/core": "0.7.0",
    "@graphql-modules/epoxy": "0.4.0",
    "@graphql-modules/sonar": "0.4.0",
    "@graphql-modules/di": "0.7.0",
    "@graphql-modules/utils": "0.4.0",
    "pino": "5.12.2",
    "express-pino-logger": "4.0.0",
    "express": "4.16.4",

    "graphql": "14.2.1",
    "apollo-server-core": "2.4.8",
    "graphql-toolkit": "0.2.9",
    "encoding": "0.1.12",
    "utf-8-validate": "5.0.2",
    "bufferutil": "4.0.1"
  },
  "devDependencies": {
    "@types/redis": "2.8.12",
    "jest": "24.7.1",
    "jest-cli": "24.7.1",
    "@types/jest": "24.0.11",
    "pino-pretty": "2.6.0",
    "@types/graphql": "14.2.0",
    "typescript": "3.4.3",
    "@types/pino": "5.8.6",
    "@types/mkdirp": "0.5.2",
    "@types/express": "4.16.1"
  }
}
